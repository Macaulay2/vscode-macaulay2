{
    "compilerOptions": {
	"module": "esnext",
	"target": "es2020",
	"rootDir": "src/webview",
	"outDir": "media",
	"lib": [
	    "es2020",
	    "dom"
	],
	"sourceMap": false, /* sadly doesn't work in vscode anyway */
	"strict": false,   /* disable all strict type-checking options */
	"esModuleInterop": true,
	"skipLibCheck": true,
	"moduleResolution": "bundler",
    },
    "include": [
	"src/webview/**/*.ts"
    ]
}
