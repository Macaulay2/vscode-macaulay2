{
  "fileTypes": [],
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#macaulay2-code-block"
    }
  ],
  "repository": {
    "macaulay2-code-block": {
      "begin": "(^|\\G)(\\s*)(\\`{3,}|~{3,})\\s*(?i:(m2|macaulay2)(\\s+[^`~]*)?$)",
      "name": "markup.fenced_code.block.markdown",
      "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
      "beginCaptures": {
	"3": {
	  "name": "punctuation.definition.markdown"
	},
	"4": {
	  "name": "fenced_code.block.language.markdown"
	},
	"5": {
	  "name": "fenced_code.block.language.attributes.markdown"
	}
      },
      "endCaptures": {
	"3": {
	  "name": "punctuation.definition.markdown"
	}
      },
      "patterns": [
	{
	  "begin": "(^|\\G)(\\s*)(.*)",
	  "while": "(^|\\G)(?!\\s*([`~]{3,})\\s*$)",
	  "contentName": "meta.embedded.block.macaulay2",
	  "patterns": [
	    {
	      "include": "source.macaulay2"
	    }
	  ]
	}
      ]
    }
  },
  "scopeName": "markdown.macaulay2.codeblock"
}
